{
  "manifest_version": 2,

  "name": "Rainwave Notifications",
  "description": "This extension adds notifications to Rainwave.",
  "version": "1.0",
  
  "background": {
    "scripts": ["scripts/notifications.js"]
  },

  "permissions": [
    "http://*.rainwave.cc/",
    "notifications",
    "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://*.rainwave.cc/"],
      "js": ["scripts/jquery-2.0.3.min.js", "scripts/content-reader.js"]
    }
  ],
  
  "web_accessible_resources": [
    "scripts/jquery-2.0.3.js",
    "scripts/jquery-2.0.3.min.map"
  ]
}